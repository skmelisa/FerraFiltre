@model List<FiltreData>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Filtre Arama</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center text-primary">Filtre Numarası ile Arama</h2>

       
        <form method="get" class="d-flex justify-content-center my-4">
            <input type="text" name="searchTerm" class="form-control w-50" placeholder="Filtre No Ara" value="@Context.Request.Query["searchTerm"]">
            <button type="submit" class="btn btn-primary ms-2">Ara</button>
        </form>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ferra No</th>
                        <th>Firma Adı</th>
                        <th>Filtre No</th>
                        <th>Katalog</th>
                        <th>Orjinal/Muadil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FerraNo</td>
                            <td>@item.FirmaAdi</td>
                            <td>@item.FiltreNo</td>
                            <td>@item.Katalog</td>
                            <td>@item.OrjinalMuadil</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
